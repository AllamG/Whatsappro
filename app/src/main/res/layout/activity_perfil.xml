<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilActivity">


    <include
        android:id="@+id/toolbar_Perfil"
        layout="@layout/toolbar_principal"></include>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagen_perfil"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/toolbar_Perfil"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/jk"
        app:civ_border_color="@color/black"
        app:civ_border_width="2dp"/>

    <EditText
        android:id="@+id/nombre_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/imagen_perfil"
        android:layout_marginTop="5dp"
        android:background="@drawable/textos"
        android:padding="8dp"
        android:hint="Nombre"
        android:minHeight="48dp"/>
    <EditText
        android:id="@+id/ciudad_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/nombre_perfil"
        android:layout_marginTop="5dp"
        android:background="@drawable/textos"
        android:padding="8dp"
        android:hint="Ciudad"
        android:minHeight="48dp"/>
    <EditText
        android:id="@+id/estado_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/ciudad_perfil"
        android:layout_marginTop="5dp"
        android:background="@drawable/textos"
        android:padding="8dp"
        android:hint="estado"
        android:minHeight="48dp"/>
    <EditText
        android:id="@+id/genero_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/estado_perfil"
        android:layout_marginTop="5dp"
        android:background="@drawable/textos"
        android:padding="8dp"
        android:hint="Genero"
        android:minHeight="48dp"/>
    <EditText
        android:id="@+id/edad_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/genero_perfil"
        android:layout_marginTop="5dp"
        android:background="@drawable/textos"
        android:padding="8dp"
        android:inputType="number"
        android:hint="Edad"
        android:minHeight="48dp"/>
    <Button
        android:id="@+id/boton_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edad_perfil"
        android:layout_margin="20dp"
        android:text="Actualizar Informacion"
        android:background="@drawable/botones"
        android:textColor="#ffffff"/>


</RelativeLayout>