<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetupActivity">
    <include
        android:id="@+id/toolbar_setup"
        layout="@layout/toolbar_principal"></include>
    <EditText
        android:id="@+id/nombre_setup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textos"
        android:layout_below="@+id/toolbar_setup"
        android:padding="10dp"
        android:hint="Ingrese su Nombre"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:minHeight="48dp"/>

    <EditText
        android:id="@+id/ciudad_setup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textos"
        android:layout_below="@+id/nombre_setup"
        android:padding="10dp"
        android:hint="Ingrese su Ciudad"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:minHeight="48dp"/>
    <EditText
        android:id="@+id/Estado_setup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textos"
        android:layout_below="@+id/ciudad_setup"
        android:padding="10dp"
        android:hint="Ingrese su Estado"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:minHeight="48dp"/>
    <EditText
        android:id="@+id/Edad_setup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textos"
        android:layout_below="@+id/Estado_setup"
        android:padding="10dp"
        android:hint="Ingrese su Edad"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:minHeight="48dp"/>
    <EditText
        android:id="@+id/Genero_setup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textos"
        android:layout_below="@+id/Edad_setup"
        android:padding="10dp"
        android:hint="Ingrese su Genero"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:minHeight="48dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagen_setup"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/Genero_setup"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/jk"
        app:civ_border_color="@color/black"
        app:civ_border_width="2dp"/>
    <Button
        android:id="@+id/boton_setup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/botones"
        android:layout_below="@+id/imagen_setup"
        android:padding="10dp"
        android:text="Guardar Informacion"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:minHeight="48dp"/>

</RelativeLayout>